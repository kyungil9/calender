<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="tag" type="String"/>
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="45dp" android:id="@+id/linear_tag" android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp" android:visibility="visible">

        <TextView
                android:text="@{tag}"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp" android:id="@+id/textview_tag"
                android:textSize="28sp" android:textAlignment="textStart"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_baseline_check_24"
                android:id="@+id/check_tag_view" android:visibility="invisible"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>