<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.fragment.CalenderFragment">
<data>
    <variable name="sAdapter" type="com.calender.presentation.view.adapter.ScheduleAdapter"/>
    <variable name="cAdapter" type="com.calender.presentation.view.adapter.CalenderAdapter"/>
</data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/calender_fragment">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/calender_layout">
            <include
                layout="@layout/view_calender_days"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/custom_calender"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:adapter="@{cAdapter}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:behavior_hideable="true"
                app:behavior_expandedOffset="0dp"
                app:behavior_peekHeight="300dp"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                android:id="@+id/bottom_schedule_sheet"
                android:background="#FFFFFF">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/schedule_layout"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                        android:text="@string/calender_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/calender_list_name"
                        android:textSize="15sp"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textStyle="bold" android:layout_marginStart="5dp"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="3dp"
                        android:background="#bbb"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="vertical"
                        app:adapter="@{sAdapter}"
                        android:id="@+id/schedule_list"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>